program projectile
  implicit none

  ! definimos constantes
  real, parameter :: g = 9.8
  real, parameter :: pi = 3.1415927

  ! definimos las variables
  real :: a, t, u, x, y
  real :: theta, v, vx, vy

  ! Leer valores para el 치ngulo a y la velocidad inicial u desde la terminal
  write(*,*) 'Dame el 치ngulo y la rapidez inicial'
  read(*,*) a, u

  ! convirtiendo 치ngulo a radianes
  a = a * pi / 180.0
  
  ! las ecuaciones de la posici칩n en x y y
   t = 2.0 * u * sin(a) / g
 

 
 
 ! escribiendo el resultado en la pantalla
  !write(*,*) 'x: ',x,'  y: ',y
 ! write(*,*) 'v: ',v,'  theta: ',theta
 write(*,*) 't:' , t
end program projectile
